            <version>1.0.4</version>
        </dependency>
        <dependency>
            <groupId>com.safaricom.util.errors</groupId>
            <artifactId>error-mapper</artifactId>
            <type>jar</type>
            <version>1.0.3</version>
        </dependency>
        <dependency>
            <groupId>com.safaricom.libs</groupId>
            <artifactId>SAFFPE</artifactId>
            <version>1.0</version>
            <type>jar</type>
            <scope>system</scope>
            <systemPath>${project.basedir}/jars/SAFFPE.jar</systemPath>
        </dependency>
