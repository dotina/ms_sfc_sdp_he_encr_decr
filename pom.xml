<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.5.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>com.safaricom.microservice.HE</groupId>
    <artifactId>ms-sdp-header-decryptor</artifactId>
    <version>1.0.1</version>
    <name>ms-sdp-header-decryptor</name>
    <description>This is a service to decrypt HE Encrypted MSISDN</description>

    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <springfox-version>2.9.2</springfox-version>

        <!-- SonarQube Properties -->
        <sonar.core.codeCoveragePlugin>jacoco</sonar.core.codeCoveragePlugin>
        <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
        <sonar.surefire.reportsPath>${project.basedir}/target/surefire-reports</sonar.surefire.reportsPath>
        <sonar.binaries>${project.basedir}/target/classes</sonar.binaries>
        <sonar.jacoco.reportPath>${project.basedir}/target/jacoco.exec</sonar.jacoco.reportPath>
        <sonar.exclusions>
            **/security/**/*, **/LogsManager*
        </sonar.exclusions>
        <sonar.coverage.exclusions>
            **/components/**/*, **/config/**/*, **/security/**/*, **/exceptions/**/*, **/models/**/*, **/utils/**/*
        </sonar.coverage.exclusions>

    </properties>
    <repositories>
        <repository>
            <id>maven-central</id>
            <name>svdt1-tib-dev-int-01.safaricom.net-releases</name>
            <url>http://svdt5kubmas01.safaricom.net:31968/artifactory/libs-release</url>
        </repository>
        <repository>
            <id>splunk-central</id>
            <name>svdt1-tib-dev-int-01.safaricom.net-releases</name>
            <url>http://svdt5kubmas01.safaricom.net:31968/artifactory/splunk-artifactory</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
